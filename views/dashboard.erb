<h1>Users:</h1>
<table>
  <tr>
    <th>Email</th>
    <th>Status</th>
    <th>Merchant ID</th>
  </tr>
  <% @users.each do |u| %>
    <tr>
      <td><%= u.email %></td>
      <td><%= u.bt_merchant_state %></td>
      <td><%= u.bt_merchant_id %></td>
    </tr>
  <% end %>
</table>

<h1>Policies:</h1>
<table>
  <tr>
    <th>Action</th>
    <th>Name</th>
    <th>Votes (yes/no)</th>
    <th>Deadline</th>
    <th>Image URL</th>
    <td>Impacts</td>
    <th>Created At</th>
  </tr>
  <% @policies.each do |p| %>
    <tr>
      <td><a href="/notify/<%= p.id %>">close voting</a></td>
      <td><%= p.name %></td>
      <td><%= p.votes.inject(0) { |sum, v| sum + (v.yes ? 1 : 0) } %> / <%= p.votes.inject(0) { |sum, v| sum + (v.yes ? 0 : 1) } %></td>
      <td><%= p.image_url %></td>
      <td><%= p.deadline %></td>
      <td>
        <% p.impacts.each do |i| %>
        <%= "#{i.title} #{i.yes}/#{i.no}" %>
        <% end %>
      </td>
      <td><%= p.created_at %></td>
    </tr>
  <% end %>
</table>

